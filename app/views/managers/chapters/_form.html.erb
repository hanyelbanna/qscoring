<%= simple_form_for(@chapter, remote: true) do |f| %>
  <%= f.error_notification %>
<ul class="errors" style="color: #f00;"></ul>
  <div class="form-inputs">
    <%= f.input :name, label: 'Name', placeholder: 'Chapter Name', hint: 'Max 255 characters.', required: true, autofocus: true %>
    <%= f.input :description, label: 'Description', placeholder: 'Chapter Description', required: true, as: :summernote %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn blue' %>
    <a id="cancel-form" class="btn btn-default">Cancel</a>
  </div>
<% end %>
