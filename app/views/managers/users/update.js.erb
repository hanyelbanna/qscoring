$("ul.errors").html("")
<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"));
  <% end %>
  	$("#modal_place").replaceWith("<%= j(render 'layouts/ajax_error_modal', messages: @user.errors) %>");
    $('#myModal').modal()
<% else %>
$("#data_<%= @user.id %>").replaceWith("<%= j(render @user) %>");
$('#data-form').slideUp(350);
<% end %>